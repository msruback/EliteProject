<?xml version="1.0" encoding="utf-8"?>
<resources>

<!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/colorBlack</item>
        <item name="fontPath">fonts/century-gothic.ttf</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>
        <style name="AppThemePrimary" parent="AppTheme">
            <item name="colorPrimaryDark">@color/colorPrimary</item>
            <item name="android:textColor">@color/colorPrimary</item>
            <item name="android:scrollbarThumbVertical">@color/colorPrimary</item>
        </style>
        <style name="AppThemeEmpire" parent="AppTheme">
            <item name="colorPrimaryDark">@color/colorEmpire</item>
            <item name="android:textColor">@color/colorEmpire</item>
            <item name="android:scrollbarThumbVertical">@color/colorEmpire</item>
        </style>
        <style name="AppThemeAlliance" parent="AppTheme">
            <item name="colorPrimaryDark">@color/colorAlliance</item>
            <item name="android:textColor">@color/colorAlliance</item>
            <item name="android:scrollbarThumbVertical">@color/colorAlliance</item>
        </style>
        <style name="AppThemeFederation" parent="AppTheme">
            <item name="colorPrimaryDark">@color/colorFederation</item>
            <item name="android:textColor">@color/colorFederation</item>
            <item name="android:scrollbarThumbVertical">@color/colorFederation</item>
        </style>
        <style name="AppThemeIndependent" parent="AppTheme">
            <item name="colorPrimaryDark">@color/colorIndependent</item>
            <item name="android:textColor">@color/colorIndependent</item>
            <item name="android:scrollbarThumbVertical">@color/colorIndependent</item>
        </style>
    <style name="Header">
        <item name="android:layout_margin">8dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">35dp</item>
        <item name="fontPath">fonts/eurocaps.ttf</item>
    </style>
    <style name="CurrentPage" parent="Header">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="fontPath">fonts/eurocaps.ttf</item>
    </style>

</resources>